<h1>Events:</h1>
<div class="card-holder">
    <% @events.each do |event| %>
        <div class="event-card">
            <div class="card-header">
                <h3><%= event.name %></h3>
            </div>
            <div class="card-content clearfix">
                <%= event.format_date(event.start_datetime) %>
                <p class="category-list">
                <% event.categories.each do |cat| %>
                    <span class="cat-name"><%= cat.name%></span> 
                <% end %>
                </p>
                <%= event.location %>
                <a class="mini-btn" href="/events/<%= event.id%>">More ></a> 
            </div>
         </div>
        
    <% end %>
</div>
<div>
    <a class="btn" href="/events/new">Add Event</a> <a class="btn" href="/user/<%= current_user.id %>">My events</a>
</div>