  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />

    <title>EventConnection</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="/stylesheets/main.css" />
  </head>
  <body>
    <header>
    <div class="branding"><a href="/">EventConnection</a></div>
      <nav class="menu-nav">
        <ul><%= menu_options %><li><a href="/events">All Events</a></li></ul>
      </nav>
    </header>
    <div id="holder">
      
        <% if session[:current_errors] && session[:current_errors].length > 0 %>
        <div class="error-message">
        <% session[:current_errors].each do |error| %>
          <em><%= error %>.</em>
        <% end %>  
        <% session[:current_errors].clear %>
        </div>
      <% end %>
    </div>
    <div class="wrapper">

        <%= yield %>

      
    </div>
    <footer >
    <div class="branding">
    <small>&copy; 2020 <strong>EventConnection</strong></small>
  </div>
        <div class="menu-nav">
        <ul>
          <!-- Eventually want to show dynamic footer based on whether or not the user is logged in -->
          <%= menu_options %><li><a href="/events">All Events</a></li>
        </ul>
        </div>
       
      </footer>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
    <!--[if lt IE 7]>
      <script src="//ajax.googleapis.com/ajax/libs/chrome-frame/1.0.2/CFInstall.min.js"></script>
      <script>window.attachEvent("onload",function(){CFInstall.check({mode:"overlay"})})</script>
    <![endif]-->
  </body>
</html>
